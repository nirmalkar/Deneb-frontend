{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "plugin:prettier/recommended",
        "react-app/jest",
        "plugin:testing-library/recommended",
        "plugin:jest-dom/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react", "testing-library", "jest-dom"],
    "rules": {
        "react/display-name": 0
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
